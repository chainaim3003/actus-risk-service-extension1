        "    console.log('');",
        "    console.log('PORTFOLIO (5 ACTUS contracts — BTC as CLM):');",
        "    console.log('  1. CLM  BTC-CLM-Lending-40   40 BTC ($2M) @ 3% APY, 7-day notice');",
        "    console.log('  2. PAM  TBILL-3mo-500K-Mar   $500K zero-coupon   matures Mar 31');",
        "    console.log('  3. PAM  TBILL-5mo-500K-May   $500K zero-coupon   matures May 31');",
        "    console.log('  4. PAM  TBILL-4mo-250K-Jun   $250K zero-coupon   matures Jun 30');",
        "    console.log('  5. PAM  TBILL-5mo-500K-Jul   $500K zero-coupon   matures Jul 31');",
        "    console.log('');",
        "    console.log('KEY: CLM produces IED + monthly IP + behavioral PP + MD events');",
        "    console.log('     IP events show 3% APY yield income from BTC lending');",
        "    console.log('     PP events from AllocationDriftModel (CLM mode: positionQuantity=40)');",
        "    console.log('');",
        "    console.log('═'.repeat(80));",
        "    data.forEach(function(contractResult, idx){",
        "        var events = contractResult.events || [];",
        "        var counts = {};",
        "        events.forEach(function(e){ counts[e.type]=(counts[e.type]||0)+1; });",
        "        console.log('');",
        "        console.log('── CONTRACT ' + (idx+1) + ': ' + (contractResult.contractId || contractResult.contractID) + ' ──');",
        "        console.log('   Status: ' + contractResult.status);",
        "        if (contractResult.status === 'Failure') {",
        "            console.log('   ERROR: ' + contractResult.message);",
        "        } else {",
        "            console.log('   Total events: ' + events.length);",
        "            var typeStr = Object.keys(counts).map(function(k){return k+':'+counts[k];}).join(', ');",
        "            console.log('   Event types: ' + typeStr);",
        "            events.forEach(function(e){",
        "                console.log('   '+e.time.substring(0,10)+' '+e.type+'  payoff='+e.payoff.toFixed(2)+'  notional='+e.nominalValue.toFixed(2)+'  rate='+(e.nominalRate !== undefined ? e.nominalRate.toFixed(4) : 'n/a'));",
        "            });",
        "        }",
        "    });",
        "    console.log('');",
        "    console.log('═'.repeat(80));",
        "    console.log('CLM ADVANTAGES OVER STK/COM:');",
        "    console.log('  • No feeRate NPE (CLM parser defaults feeRate=0.0)');",
        "    console.log('  • No initialExchangeDate NPE (CLM has IED as mandatory field)');",
        "    console.log('  • Full StateSpace initialization (notionalPrincipal, accruedInterest)');",
        "    console.log('  • Monthly IP events show yield income ($5K/mo at 3% on $2M)');",
        "    console.log('  • PP events for rebalancing with correct quantity tracking');",
        "    console.log('  • ZERO changes needed in actus-service or webapp');",
        "    console.log('═'.repeat(80));",
        "});",
        "pm.test('All 5 contracts succeeded', function(){",
        "    var data = pm.response.json();",
        "    data.forEach(function(r){ pm.expect(r.status).to.eql('Success'); });",
        "});"
      ]}}]
